{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "packageRules": [
    {
      "matchDatasources": ["pypi"],
      "matchPackageNames": ["homeassistant"],
      "enabled": false
    },
    {
      "matchDatasources": ["pypi"],
      "matchPaths": ["requirements.txt"],
      "automerge": true
    },
    {
      "matchPaths": ["custom_components/ims/manifest.json"],
      "managers": ["regex"],
      "regexManagers": [
        {
          "fileMatch": ["^custom_components/.+/manifest\\.json$"],
          "matchStrings": [
            "\"requirements\":\\s*\\[(?<dep>[\"'][^\"']+==(?<currentValue>\\d+\\.\\d+\\.\\d+(-\\w+)?)[\"'])"
          ],
          "depNameTemplate": "{{dep}}",
          "versioning": "semver",
          "datasourceTemplate": "pypi",
          "registryUrls": ["https://pypi.org/simple"]
        }
      ],
      "automerge": true
    }
  ]
}
